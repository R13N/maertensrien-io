\documentclass[11pt,a4paper]{moderncv}

\usepackage[scale=0.75]{geometry}
\usepackage[utf8]{inputenc}
\usepackage{bbding}
\usepackage{enumitem}
\usepackage{fontspec}
\usepackage{textcomp}

\moderncvstyle[center]{banking}

\name{<%= item[:first_name] %>}{<%= item[:last_name] %>}
\address{<%= item[:address].split(',').join('}{') %>}
\phone[phone]{<%= item[:phone] %>}
\social[github]{<%= item[:github] %>}
\email{<%= item[:email] %>}
\homepage{<%= item[:homepage] %>}

\AfterPreamble{
  \hypersetup{
    pdfauthor={<%= item[:first_name] + ' ' + item[:last_name] %>},
    pdftitle={CV for <%= item[:first_name] + ' ' + item[:last_name] %>},
    pdfsubject={},
    colorlinks=true,
    urlcolor=blue,
    linkcolor=black
  }
}

\begin{document}
\makecvtitle
<%= md2tex item[:description] %>

\section{Education}
<% item[:education].each do |edu| %>
  <%= cv_entry edu, :graduation, :institution, :degree, nil, nil, :extras %>
<% end %>

\section{Skills}
\subsection{Programming}
<%= latex_proficiencies item[:programming] %>

\subsection{Technologies}
<%= latex_proficiencies item[:technologies] %>

\subsection{Languages}
<%= latex_proficiencies item[:languages] %>

\section{Experience}
\subsection{Work}
<% item[:experience_work].each do |exp| %>
  \begin{minipage}{\textwidth}
  <%= cv_entry exp, :period, :employer, :function, nil, nil, :description %>
    <% if exp[:info] %>
      \begin{itemize}
        <% exp[:info].each do |info| %>
          \item <%= info %>
        <% end %>
      \end{itemize}
    <% end %>
  \end{minipage}
<% end %>

\subsection{Other}
<% item[:experience_other].each do |exp| %>
  \begin{minipage}{\textwidth}
  <%= cv_entry exp, :period, :employer, :function, nil, nil, :description %>
  <% if exp[:info] %>
    \begin{itemize}
      <% exp[:info].each do |info| %>
        \item <%= md2tex info %>
      <% end %>
    \end{itemize}
  <% end %>
  \end{minipage}
<% end %>


\section{Miscelaneous}
\subsection{Hobbies}
\begin{itemize}
  <% item[:misc][:hobbies].each do |hobby| %>
    \item <%= md2tex hobby %>
  <% end %>
\end{itemize}

\subsection{Achievements}
\begin{itemize}
  <% item[:misc][:achievements].each do |achievement| %>
    \item <%= md2tex achievement %>
  <% end %>
\end{itemize}

\end{document}
